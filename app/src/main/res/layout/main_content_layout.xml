<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_title_re"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/main_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_dehaze" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_search_re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/main_title_re"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/search_back">

        <EditText
            android:id="@+id/main_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/main_search_icon"
            android:background="#00000000"
            android:hint="search"
            android:textColor="@color/text_2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/main_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_search" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_search_re"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

</RelativeLayout>